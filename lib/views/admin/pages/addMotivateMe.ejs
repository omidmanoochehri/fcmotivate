<div id="addCategoriesPage" class="container-fluid">

    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <h4 class="page-title">
                    <%= title %>
                </h4>


            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card m-b-20">
                <div class="card-body">
                    <p class="text-muted m-b-30 "></p>

                    <form class="" action="<%= MAIN_URL %>/admin/motivate_me" method="POST" enctype="multipart/form-data">
                        <%- action=='edit' ? `<input name="_id" type="hidden" value="${motivate_me._id}" />` : "" %>
                            <input name="action" type="hidden" value="<%= action %>" />

                            <div class="form-group">
                                <label>Name</label>
                                <input name="title" type="text" value="<%= action == 'edit' ? motivate_me.title : '' %>" class="form-control" required placeholder="Name..." />
                            </div>

                            <div class="form-group">
                                <label class="control-label">Categories</label>
                                <select id="category" name="category" class="form-control select2" multiple>
                                <option value="">Unkown Category</option>
                                <% for(let i=0;i<categories.length;i++){ %>
                                <%- `<option ${action=='edit' && motivate_me.category && categories[i]._id.toString()==motivate_me.category._id.toString()
                                ? 'selected' : '' } value="${categories[i]._id}">${categories[i].name}</option>
                                `%>
                                <% } %>
                            </select>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Tags</label>
                                <select id="tag" name="tag" class="form-control select2" multiple>
                                <option value="">Unknown Tag</option>
                                <% for(let i=0;i<tags.length;i++){ %>
                                <%- `<option ${action=='edit' && motivate_me.tag && tags[i]._id.toString()==motivate_me.tag._id.toString()
                                        ? 'selected' : '' } value="${tags[i]._id}">${tags[i].name}</option>
                                        `%>
                                <% } %>
                            </select>
                            </div>

                            <div class="form-group">
                                <label>Description</label>
                                <div>
                                    <textarea id="description" name="description"><%- action == 'edit' ? motivate_me.description : '' %></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <img class="musicCover" src="<%- action == 'edit' ? motivate_me.cover : '' %>" alt="" />
                                <label>Cover</label>
                                <input name="cover" type="file" class="filestyle" data-buttonname="btn-secondary" data-buttonText="Select">
                            </div>
                            <!-- <div class="form-group">
                                <label>Track URL</label>
                                <input name="trackURL" type="text" value="<%= action == 'edit' ? motivate_me.trackURL : '' %>" class="form-control" required placeholder="Track URL..." />
                            </div> -->
                            <div class="form-group mb-0">
                                <div>
                                    <button type="submit" class="btn btn-primary waves-effect waves-light ml-1">
                                    Add
                                </button>
                                    <a href="/admin/motivate_me" class="btn btn-secondary waves-effect">
                                    Cancel
                                </a>
                                </div>
                            </div>
                    </form>

                </div>
            </div>
        </div>
        <!-- end col -->

    </div>
    <!-- end row -->

</div>
<!-- container-fluid -->