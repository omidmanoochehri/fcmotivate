<div id="addCategoriesPage" class="container-fluid">

    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <h4 class="page-title">
                    <%= title %>
                </h4>


            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card m-b-20">
                <div class="card-body">
                    <p class="text-muted m-b-30 "></p>

                    <form class="" action="<%= MAIN_URL %>/admin/users" method="POST" enctype="multipart/form-data">
                        <%- action=='edit' ? `<input name="_id" type="hidden" value="${user._id}" />` : "" %>
                            <input name="action" type="hidden" value="<%= action %>" />

                            <div class="form-group">
                                <label>First Name</label>
                                <input name="first_name" type="text" value="<%= action == 'edit' ? user.first_name : '' %>" class="form-control" required placeholder="First Name..." />
                            </div>

                            <div class="form-group">
                                <label>Last Name</label>
                                <input name="last_name" type="text" value="<%= action == 'edit' ? user.last_name : '' %>" class="form-control" required placeholder="Last Name..." />
                            </div>

                            <div class="form-group">
                                <label class="control-label">Role</label>
                                <select id="artist" name="artist" class="form-control select2">
                                <option value="">Admin</option>
                            </select>
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input name="email" type="email" value="<%= action == 'edit' ? user.email : '' %>" class="form-control" required placeholder="Email..." />
                            </div>

                            <div class="form-group">
                                <label>Username</label>
                                <input name="username" type="text" value="<%= action == 'edit' ? user.username : '' %>" class="form-control" required placeholder="Username..." />
                            </div>


                            <div class="form-group">
                                <label>Password</label>
                                <input name="password" type="password" value="<%= action == 'edit' ? user.password : '' %>" class="form-control" required placeholder="Password..." />
                            </div>

                            <div class="form-group mb-0">
                                <div>
                                    <button type="submit" class="btn btn-primary waves-effect waves-light ml-1">
                                    Add
                                </button>
                                    <a href="/admin/users" class="btn btn-secondary waves-effect">
                                    Cancel
                                </a>
                                </div>
                            </div>
                    </form>

                </div>
            </div>
        </div>
        <!-- end col -->

    </div>
    <!-- end row -->

</div>
<!-- container-fluid -->