<div id="addCategoriesPage" class="container-fluid">

    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <h4 class="page-title">
                    <%= title %>
                </h4>


            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card m-b-20">
                <div class="card-body">
                    <p class="text-muted m-b-30 "></p>

                    <form class="" action="<%= MAIN_URL %>/admin/genres" method="POST" enctype="multipart/form-data">
                        <%- action=='edit' ? `<input name="_id" type="hidden" value="${genre._id}" />` : "" %>
                            <input name="action" type="hidden" value="<%= action %>" />

                            <div class="form-group">
                                <label>Name</label>
                                <input name="name" type="text" value="<%= action == 'edit' ? genre.name : '' %>" class="form-control" required placeholder="Name..." />
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <div>
                                    <textarea id="description" name="description"><%- action == 'edit' ? genre.description : '' %></textarea>
                                </div>
                            </div>
                            <div class="form-group mb-0">
                                <div>
                                    <button type="submit" class="btn btn-primary waves-effect waves-light ml-1">
                                    Add
                                </button>
                                    <a href="/admin/genres" class="btn btn-secondary waves-effect">
                                    Cancel
                                </a>
                                </div>
                            </div>
                    </form>

                </div>
            </div>
        </div>
        <!-- end col -->

    </div>
    <!-- end row -->

</div>
<!-- container-fluid -->